            <div class="col-xs-10 col-xs-offset-1">
                <div class="col-xs-6 col-xs-offset-3 baseregister">
                    <div class="col-xs-12">
                        <form>

                            <div class="form-group">
                                <input type="email" class="form-control" id="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="pwd" placeholder="Password">
                                <div class="checkbox sf">
                                    <label><input type="checkbox"> Stay Signed In</label><a href="">Forget Password</a>
                                </div>
                            </div>
                            <div class="col-xs-12 noPaddingLR">
                                <a class="JSbutton col-xs-12 btn btn-lg" href="registration_step2.html"><span class="pull-left">Login</span><span class="pull-right glyphicon glyphicon-arrow-right"></span></a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-xs-6 col-xs-offset-3 text-align-center signupLogin">
                    Dont have a JobsBridge account?<br>
                    <a href="registration_step1.html">Sign up Now!</a>
                </div>
            </div>
        </div>
    </div><!-- Registration Process Ends -->

    <div class="container footer">
        <div class="row">
            <h1>Subscribe with Us!</h1>
            <div class="col-xs-6 col-xs-offset-3 subscribe">
                <input type="text" class="form-control " placeholder="Enter Your Email Address">
                <button><span class="glyphicon glyphicon-send"></span></button>
            </div>
            <div class="col-xs-4 col-xs-offset-4 socialButton">
                <div class="col-xs-6 text-align-center"><a href=""><img src="images/btn_facebook.png"></a></div><div class="col-xs-6 text-align-center"><a href=""><img src="images/btn_gplus.png"></a></div>
