                                            </div>
                                            <a type="submit" class="btn btn-block btn-login">Login</a>
                                            <a type="submit" class="btn btn-block btn-default" href="registration.html">New User? Sign in Here</a>
                                        </div>
                                    </li>
                                </ul>*@
                        </li>
                        <li><a href="#">For Employer</a></li>
                    </ul>
                </div>
            </div><!-- Top Row of Navigation -->

            <div class="col-xs-12 col-sm-12 col-md-12 headingInnerMain">
                Upload Resume On <span>JobsBridge</span> Now!
            </div><!-- logo -->

        </div>
    </div><!-- topHeader Ends -->
    @using (Html.BeginForm("EmploymentDetails", "UserRegistration", FormMethod.Post))
                {
                    <div class="container benifits registration">
                        <div class="row">
                            <div class="alert alert-success" role="alert"><span class="glyphicon glyphicon-ok"></span> &nbsp;@TempData["Message"]</div>
                            <div class="col-xs-6 col-xs-offset-3 steps"><ul><li>Personal Details</li><li class="active">Employment</li><li>Education</li></ul></div>
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="col-xs-6 col-xs-offset-3 baseregister">
                                    <div class="col-xs-12">
                                        @*<form>*@
                                        @Html.HiddenFor(x => x.UserID)

                                        <div class="form-group">
                                            <label>Current Designation <span>*</span></label>
                                            @Html.DropDownListFor(x => Model.CurrentDesignation, Model.DesignationList, new { @class = "form-control", @placeholder = "CurrentDesignation" })
                                        </div>
                                        <div class="form-group">
                                            <label>Current Company <span>*</span></label>
                                            @Html.DropDownListFor(x => Model.CurrentCompany, Model.CompanyList, new { @class = "form-control", @placeholder = "CurrentCompany" })
                                        </div>
                                        <div class="form-group annualSalary clearfix">
                                            <label>Annual Salary <span>*</span></label>
                                            <div class="col-xs-12 noPaddingLR">
                                                <div class="col-xs-8 padding-lft">
                                                    <select class="selectpicker" data-style="btn " title="Select Location" data-size="5">
                                                        <option value="id">Active</option>
                                                        <option value="ms">In-Active</option>
                                                    </select>
                                                </div>
                                                <div class="clearfix"></div>
                                                <div class="col-xs-4 noPaddingLR">
                                                    <div class="dropdown ">
                                                        @Html.DropDownListFor(x => Model.AnnualSalaryInlakhs, Model.ListAnnualSalaryInLakh, "-select-", new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-2 moneyname">
                                                    Lakhs
                                                </div>
                                                <div class="col-xs-4 noPaddingLR">
                                                    <div class="dropdown">
                                                        @Html.DropDownListFor(x => Model.AnnualSalaryInThousand, Model.ListAnnualSalaryInThousand, "-Select-", new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                    </div>
                                                </div>
                                                <div class="col-xs-2 moneyname">
                                                    Thousand
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group annualSalary clearfix">
                                            <label>Working Since <span>*</span></label>
                                            <div class="col-xs-12 noPaddingLR">
                                                <div class="col-xs-4 noPaddingL">
                                                    <div class="dropdown ">
                                                        @Html.DropDownListFor(x => Model.WorkingSinceYear, Model.ListWorkingSince, "-Select-", new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                    </div>
                                                </div>

                                                <div class="col-xs-4 noPaddingLR">
                                                    <div class="dropdown ">
                                                        @Html.DropDownListFor(x => Model.WotkingSinceMonth, Model.ListWorkingMonth, "-Select-", new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                    </div>
                                                </div>

                                                <div class="col-xs-1 moneyname">
                                                    to
                                                </div>
                                                <div class="col-xs-3 noPaddingLR">
                                                    <div class="dropdown">
                                                        @Html.DropDownListFor(x => Model.WorkingTo, Model.ListWorkingSince, "-Select-", new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="form-group currentLocation clearfix">
                                            <label>Current Location<span>*</span></label>
                                            <div class="col-xs-12 noPaddingLR">
                                                <div class="dropdown ">
                                                    @Html.DropDownListFor(x => Model.CurrentLocationID, Model.CityList, new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                </div>
                                                @*<div class="checkbox"><label><input type="checkbox" class="checkbox">Outside India</label></div>*@
                                                <div class="checkbox"><label>@Html.CheckBoxFor(x => Model.OutSideIndia, new { @class = "checkbox" })Outside India </label></div>
                                            </div>
                                        </div>

                                        <div class="form-group noticePeriod clearfix">
                                            <label>Notice Period<span>*</span></label>
                                            <div class="col-xs-12 noPaddingLR">
                                                <div class="dropdown ">
                                                    @Html.DropDownListFor(x => Model.NoticePeriod, listNoticePeriod, new { @class = "form-control  dropdown - menu col - xs - 12" })
                                                </div>
                                            </div>
                                            @*  <div class="checkbox"><label><input type="checkbox" class="checkbox">Serving notice period</label></div>*@
                                            <div class="checkbox"><label>@Html.CheckBoxFor(x => Model.ServeNoticePeriod, new { @class = "checkbox" })Serving notice period </label></div>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 noPaddingLR">
                                        <input type="submit" class="JSbutton col-xs-12 btn btn-lg" value="Continue" /><span class="pull-right glyphicon glyphicon-arrow-right"></span>
                                        @*<a class="JSbutton col-xs-12 btn btn-lg" href="registration_step3.html"><span class="pull-left">Continue</span><span class="pull-right glyphicon glyphicon-arrow-right"></span></a>*@
                                    </div>
                                    @*</form>*@
                                </div>
                            </div>
                        </div>
                    </div>

                }
    <div class="container footer">
        <div class="row">
            <h1>Subscribe with Us!</h1>
            <div class="col-xs-6 col-xs-offset-3 subscribe">
                <input type="text" class="form-control " placeholder="Enter Your Email Address">
                <button><span class="glyphicon glyphicon-send"></span></button>
            </div>
            <div class="col-xs-4 col-xs-offset-4 socialButton">
                <div class="col-xs-6 text-align-center"><a href=""><img src="~/Content/images/btn_facebook.png"></a></div><div class="col-xs-6 text-align-center"><a href=""><img src="~/Content/images/btn_gplus.png"></a></div>
            </div>
            <div class="col-xs-6 col-xs-offset-3 footerLinks">
                <ul><li><a href="">Home</a></li><li>|</li><li><a href="">Contact Us</a></li><li>|</li><li><a href="">Feedback</a></li><li>|</li><li><a href="">FAQ</a></li><li>|</li><li><a href="">Terms of Use</a></li><li>|</li><li><a href="">Privacy Policy</a></li></ul>
            </div>
            <div class="col-xs-6 col-xs-offset-3 copyright">
                <div class="col-xs-6 text-align-left txt">Copyright Jobs Bridge 2017. All Right Reserved</div>
                <div class="col-xs-6 text-align-right"><a href=""><img src="~/Content/images/iconFacebook.png"></a><a href=""><img src="images/iconTwitter.png"></a></div>
            </div>
        </div>
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "0px";
            document.body.style.backgroundColor = "rgba(0,0,0,0.4)";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.body.style.backgroundColor = "white";
        }

        // for browseJobs button
        $("#animate").click(function () {
            $("#content").animate(
                { "width": "450px" },
                "fast");
        });

        //  for Carousel
        $(document).ready(function () {
            $('#media').carousel({
                pause: true,
                interval: false,
            });
        });
    </script>

</body>
</html>
