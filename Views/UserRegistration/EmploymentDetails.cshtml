@model BusinessModel.UserRegistrationEmployeMentModel
@{
        ViewBag.Title = "User Registration";
        Layout = null;

        List<SelectListItem> listNoticePeriod = new List<SelectListItem>();
        listNoticePeriod.Add(new SelectListItem { Text = "15 Days or less", Value = "1" }) ;
        listNoticePeriod.Add(new SelectListItem { Text = "1 Month", Value = "2" });
        listNoticePeriod.Add(new SelectListItem { Text = "2 Months", Value = "3" });
        listNoticePeriod.Add(new SelectListItem { Text = "3 Months", Value = "4" });
        listNoticePeriod.Add(new SelectListItem { Text = "More than 3 Months", Value = "5" });
        listNoticePeriod.Add(new SelectListItem { Text = "select", Value = "0", Selected = true });
    }

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>JobsBridge</title>

    @*@Styles.Render("~/Content/css")*@
